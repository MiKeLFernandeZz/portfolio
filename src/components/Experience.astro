---
import Maleta from "../icons/Maleta.astro"
import ExperienceItem from "./ExperienceItem.astro"
import TextGradient from "./TextGradient.astro"
import UnderlineText from "./UnderlineText.astro"
const EXPERIENCIE = [
  {
    date: "Octubre 2021 - Actualidad",
    title: "MLOps and DevOps Engineer",
    company: "Ikerlan",
    description:
      "Realizando el Trabajo de Fin de Grado en Ikerlan, en el departamento de Data Science e Inteligencia Artificial. Desarrollo de una plataforma para el entrenamiento de modelos de Machine Learning paralelizados.",
    // link: "https://twitch.tv/midudev",
  }
]
---

<section class="lg:max-w-4xl md:max-w-2xl mx-6 md:mx-auto py-24 flex flex-col gap-8">
    <div class="flex gap-3 items-center">
        
        <UnderlineText class="text-3xl text-white font-semibold font-onest"><Maleta class="inline"/> Experiencia Laboral</UnderlineText>
    </div>
    <ol class="relative">
        {
          EXPERIENCIE.map((experiencie) => (
            <li class="">
              <ExperienceItem {...experiencie} />
            </li>
          ))
        }
      </ol>
</section>