---
const { icon } = Astro.props
---

<span
    class="inline-flex gap-3 h-full animate-background-shine items-center justify-center rounded-full border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1.5 text-xs font-medium text-gray-300"
>
    <icon.icon class="size-4" />
    {icon.name}
</span>
